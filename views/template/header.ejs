<header class="p-3 bg-primer border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-between">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/assets/static/images/logo.png" alt="logo" class="logo me-3">
                <span class="text-light" style="font-size: 30px; font-weight: bold;">
                    <%= web_config.nama_project %>
                </span>
            </a>

            <ul class="nav mb-2 mb-lg-0 d-flex justify-content-center justify-content-lg-center p-1">
                <li class="nav-item">
                    <a href="#about" class="nav-link px-2 fw-bold text-white"> About </a>
                </li>
                <li class="nav-item">
                    <a href="#features" class="nav-link px-2 fw-bold text-white"> Features </a>
                </li>
                <li class="nav-item">
                    <a href="#faqs" class="nav-link px-2 fw-bold text-white"> FAQs </a>
                </li>
            </ul>

            <% if(!user) { %>
            <div class="text-center text-lg-end">
                <button type="button" class="btn btn-danger me-2 fw-bold text-white" data-bs-toggle="modal"
                    data-bs-target="#modalLogin">
                    Login
                </button>
                <button type="button" class="btn btn-warning fw-bold text-dark" data-bs-toggle="modal"
                    data-bs-target="#modalRegister">Register</button>
            </div>
            <% } %>

            <% if(user) { %>
            <div class="dropdown text-center">
                <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle" /> | 
                    <span class="fw-bold text-white p-1">
                        <%= user.nama_user %>
                    </span>
                </a>
                <ul class="dropdown-menu text-small">
                    <li><a class="dropdown-item" href="<%=  web_config.domain %>/user/dashboard">Dashboard</a></li>
                    <li><a class="dropdown-item" href="<%=  web_config.domain %>/user/profile">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" id="btnLogoutUser" style="cursor: pointer;">Logout</a></li>
                </ul>
            </div>
            <% } %>
        </div>
    </div>
</header>
