<%- include('../template/head') %>
    <%- include('../template/header') %>
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    Daftar User Penerima
                </div>
                <div class="card-body">
                    <div class="row">
                        <% if(dataPenerima) { %>
                            <% dataPenerima.forEach((el)=> { %>
                                <div class="mb-3 col-lg-<%= Math.max(12 / dataPenerima.length, 4) %>">

                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="text-center">
                                                <%= el.nama_user %>
                                            </h4>
                                        </div>
                                        <div class="card-footer">
                                            <a style="float: right;" class="btn btn-outline-primary"
                                                href="/<%= el.username %>">Beri <%= el.username %></a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else{ %>
                                        <div class="text-center">Tidak ada User Penerima</div>
                                        <%} %>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../template/js') %>
            <%- include('../template/footer') %>