<%- include('../template/head') %>
    <%- include('../template/header') %>
        <div class="container mt-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Saweran Keluar</li>
                </ol>
            </nav>
            <div class="card shadow">
                <div class="card-header">
                    Saweran Keluar
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped table-bordered" id="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nominal</th>
                                <th scope="col">Untuk</th>
                                <th scope="col">Pesan Anda</th>
                                <th scope="col">Waktu Transaksi</th>
                                <th scope="col">Status Transaksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(saweranKeluar) {%>
                                <% saweranKeluar.forEach((el)=> { %>
                                    <tr>
                                        <th scope="row">
                                            <a href="/user/saweran/keluar/<%= el.id_transaksi%>">
                                                <%= el.id_transaksi%>
                                            </a>
                                        </th>
                                        <td>
                                            <%= formatCurrency(el.nominal) %>
                                        </td>
                                        <td>
                                            <%= el.nama_user %>
                                        </td>
                                        <td>
                                            <%= el.pesan_pengirim %>
                                        </td>
                                        <td>
                                            <%= el.waktu_transaksi %>
                                        </td>
                                        <td>
                                            <span
                                            class="badge <%= el.status_transaksi === 'Sukses' ? 'bg-success' : 'bg-warning' %>">
                                            <%= el.status_transaksi %>
                                        </span>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('../template/js') %>
            <script>
                $(document).ready(function () {
                    $('#table').DataTable({
                        "order": [[4, "desc"]]
                    });
                })
            </script>
            <%- include('../template/footer') %>