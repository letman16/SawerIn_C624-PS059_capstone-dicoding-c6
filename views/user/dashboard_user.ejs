<%- include('../template/head') %>
    <%- include('../template/header') %>
        <div class="container mt-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>

            <div id="nama_user">
                Hi, <span class="fw-bolder">
                    <%= user.nama_user %>
                </span>
            </div>
            <div class="row p-2">
                <div class="col-lg-6 p-1">
                    <div class="card page">
                        <div class="card-header bg-primary text-white">
                            <span id="judulPage">Saweran Masuk</span>
                        </div>
                        <div class="card-body p-5">

                        </div>
                        <div class="card-footer">
                            <span id="keteranganPage">
                                Lihat histori saweran yang masuk disini.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 p-1">
                    <div class="card page">
                        <div class="card-header bg-warning text-white">
                            <span id="judulPage">Saweran Keluar</span>
                        </div>
                        <div class="card-body p-5">

                        </div>
                        <div class="card-footer">
                            <span id="keteranganPage">
                                Lihat histori saweran yang kamu kirimkan.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 p-1">
                    <div class="card page">
                        <div class="card-header bg-success text-white">
                            <span id="judulPage">Dompet</span>
                        </div>
                        <div class="card-body p-5">

                        </div>
                        <div class="card-footer">
                            <span id="keteranganPage">
                                Lihat histori saldo atau penarikan saldo disini.
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../template/js') %>
            <script>
                $(document).ready(function () {
                    const page = $('.page')
                    page.on('click', function () {
                        // 
                        const judulPage = $(this).find('#judulPage').text();

                        if (judulPage == "Saweran Masuk") {
                            window.location.href = "/user/saweran/masuk"
                        }
                        else if (judulPage == "Saweran Keluar") {
                            window.location.href = "/user/saweran/keluar"
                        }
                        else if (judulPage == "Dompet") {
                            window.location.href = "/user/dompet"
                        }
                    })
                })
            </script>
            <%- include('../template/footer') %>